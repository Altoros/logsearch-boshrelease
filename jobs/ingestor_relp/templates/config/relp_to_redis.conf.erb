input {
	relp {
		add_field => [ "_logstash_input", "relp" ]
		host => "0.0.0.0"
		port => "<%= p("logstash_ingestor.relp.port") %>"
	}
}
			
output {
	<% if p("logstash_ingestor.debug") %>
        stdout {
            codec => "json"
        }
	<% end %>

	<% if_p('kafka.broker') do %>
		kafka {
			broker_list => '<%= p('kafka.broker').join(',') %>'
			topic_id => '<%= p('kafka.topic') %>'
			client_id => 'ingestor_relp.<%= name %>.<%= index %>'
		}
	<% end %>

	<% if_p('redis.host') do %>
		redis {
			host => "<%= p("redis.host") %>"
			port => "<%= p("redis.port") %>"
			data_type => "list"
			key => "<%= p("redis.key") %>"
			batch => true
			batch_events => 50
		}
	<% end %>
}
